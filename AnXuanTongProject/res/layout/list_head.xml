<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_blue"
    android:id="@+id/list_head_relative"
     >
     <RelativeLayout 
    android:id="@+id/headLayout"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@color/backgroundgreen" >

    <TextView
        android:id="@+id/leftImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/common_return_button"
        android:gravity="center"
         />

    <TextView
        android:id="@+id/centerTitle"
        style="@style/white18"
        android:layout_width="wrap_content"
        android:maxWidth="160dp"
        android:singleLine="true"
        android:text="新闻列表"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/rightImage"
        style="@style/white16"
        android:background="@drawable/titlebar_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
          android:visibility="gone"
        />
</RelativeLayout>

       
<TextView 
    android:id="@+id/list_head_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="还没有数据了，请联系管理员添加数据"
    android:drawableTop="@drawable/car_face_cry"
    android:drawablePadding="20dp"
    android:textColor="@color/color_gray_dark"
    android:textSize="@dimen/tv_size_m"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_marginBottom="5dp"
    />
</RelativeLayout>
