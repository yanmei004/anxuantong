<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#eaeff3"
    >
<include 
    layout="@layout/head"
    android:visibility="gone"
    />

<ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/axtlogo"
    android:layout_marginTop="20dp"
    
    />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/about_txt_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_im_ico"
       android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/color_gray_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_txt_appname"
      android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dip"
        android:text="版本：1.0.0"
        android:textColor="@color/color_gray_dark" />

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/twocode"
     android:layout_gravity="center_horizontal"
     android:layout_marginBottom="20dp"
     
      />

    <Button
        android:id="@+id/btn_checkupdate"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/about_im_ercode"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/setting_about_button"
        android:text="检查更新"
        android:textSize="18sp"
        android:textColor="@color/white" />


   <TextView
       android:layout_marginTop="20dp"
        android:id="@+id/about_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_txt_appname"
      android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dip"
        android:text=""
        android:textColor="@color/black" />

</LinearLayout>